<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context=".Users.ProfileActivity">

    <ImageView
        android:id="@+id/backKeProfile_act"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:src="@drawable/arrow_back" />

    <ImageView
        android:id="@+id/IVfotoUser"
        android:layout_width="210dp"
        android:layout_height="167dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_user" />

    <Button
        android:id="@+id/btnPilihFotoUser"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:text="Pilih foto"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/btn_bg"
        android:orientation="vertical"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/almendra"
            android:text="Update Informasi Akun"
            android:layout_marginBottom="10dp"
            android:textColor="#3f4658"
            android:textSize="28dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/almendra"
            android:layout_marginTop="15dp"
            android:text="Username"
            android:textColor="#BC3F4658"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etuserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginLeft="12dp"
            android:drawableRight="@drawable/ic_user" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/almendra"
            android:text="Nama"
            android:textColor="#BC3F4658"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginLeft="12dp"
            android:drawableRight="@drawable/ic_user" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/almendra"
            android:text="Nomor Tlp."
            android:textColor="#BC3F4658"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etNoTlp"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="12dp"
            android:drawableRight="@drawable/ic_phone" />


        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:background="@drawable/btn_login"
            android:text="Simpan"
            android:textColor="#ffff"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnUbahPass"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:background="@drawable/btn_login"
            android:text="Ganti Password"
            android:textColor="#ffff"
            android:textSize="16dp" />



    </LinearLayout>

</LinearLayout>